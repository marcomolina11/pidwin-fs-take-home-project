{
    "compilerOptions": {
      "target": "es2018",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["es2018"],
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }